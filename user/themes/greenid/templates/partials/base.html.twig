{% set theme_config = attribute(config.themes, config.system.pages.theme) %}
<!DOCTYPE html>
<html lang="{{ grav.language.getActive ?: theme_config.default_lang }}">
<head>
{% block head %}
    <meta charset="utf-8" />
    <title>{% if header.title %}{{ header.title|e('html') }} | {% endif %}{{ site.title|e('html') }}</title>

    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {% include 'partials/metadata.html.twig' %}

    <link rel="apple-touch-icon" sizes="120x120" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" href="/favicon-32x32.png" sizes="32x32">
    <link rel="icon" type="image/png" href="/favicon-16x16.png" sizes="16x16">
    <link rel="manifest" href="/manifest.json">
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#6CA21D">
    <meta name="theme-color" content="#6CA21D">

    <link rel="canonical" href="{{ page.url(true, true) }}" />

    {% block stylesheets %}
        {% do assets.addCss('https://fonts.googleapis.com/css?family=Fjalla+One|Libre+Franklin', 100) %}
        {% do assets.addCss('https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.0.0-alpha.6/css/bootstrap-grid.css', 99) %}
        {% do assets.addCss('theme://css-compiled/main.css', 98) %}
    {% endblock %}
    {{ assets.css() }}

    {% block javascripts %}
        {% do assets.addJs('https://use.fontawesome.com/ea8e8bd17a.js', 97) %}
        {% do assets.addJs('jquery', 100) %}
        {% do assets.addJs('theme://js/jquery-ui.js', 99) %}
        {% do assets.addJs('theme://js/app.js', 98) %}
    {% endblock %}
    {{ assets.js() }}

{% endblock head%}
</head>
<body id="top" class="{{ page.header.body_classes }}">
<div id="wrapper" class="toggled">
{% block sidebar %}
<div id="sidebar-wrapper">
    <ul class="sidebar-nav">
        <li class="sidebar-brand">
            <a href="{{ base_url_absolute }}">
                <div class="logo">
                  <img src="{{ theme_url }}/images-iface/logo-greenid.svg" />
                </div>
            </a>
        </li>
        <li>
          {% if page.header.menurank == 1 %}
            <a class="act first act-snoeien-active" href="#">Snoeien</a>
          {% else %}
            <a class="act first act-snoeien" href="{{ base_url_relative }}/activiteiten/snoeien">Snoeien</a>
          {% endif %}
        </li>
        <li>
          {% if page.header.menurank == 2 %}
            <a class="act act-vellen-active" href="#">Vellen</a>
          {% else %}
            <a class="act act-vellen" href="{{ base_url_relative }}/activiteiten/vellen">Vellen</a>
          {% endif %}
        </li>
        <li>
          {% if page.header.menurank == 3 %}
            <a class="act act-hakselen-active" href="#">Hakselen</a>
          {% else %}
            <a class="act act-hakselen" href="{{ base_url_relative }}/activiteiten/hakselen">Hakselen</a>
          {% endif %}
        </li>
        <li>
          {% if page.header.menurank == 4 %}
            <a class="act act-klieven-active" href="#">Klieven</a>
          {% else %}
            <a class="act act-klieven" href="{{ base_url_relative }}/activiteiten/klieven">Klieven</a>
          {% endif %}
        </li>
        <li>
          {% if page.header.menurank == 5 %}
            <a class="act act-frezen-active" href="#">Uitfrezen</a>
          {% else %}
            <a class="act act-frezen" href="{{ base_url_relative }}/activiteiten/uitfrezen">Uitfrezen</a>
          {% endif %}
        </li>
        <li>
          {% if page.header.menurank == 6 %}
            <a class="act act-verzorging-active" href="#">Verzorging</a>
          {% else %}
            <a class="act act-verzorging" href="{{ base_url_relative }}/activiteiten/verzorging">Verzorging</a>
          {% endif %}
        </li>
        <li>
          {% if page.header.menurank == 7 %}
            <a class="act act-aanplanting-active" href="#">Aanplanten</a>
          {% else %}
            <a class="act act-aanplanting" href="{{ base_url_relative }}/activiteiten/aanplanten">Aanplanten</a>
          {% endif %}
        </li>
        <li>
          {% if page.header.menurank == 8 %}
            <a class="act act-advies-active" href="#">Advies</a>
          {% else %}
            <a class="act act-advies" href="{{ base_url_relative }}/activiteiten/advies">Advies</a>
          {% endif %}
        </li>
        <li>
          {% if page.header.menurank == 9 %}
            <a class="act act-ontmantelen-active" href="#">Standplaats</a>
          {% else %}
            <a class="act act-ontmantelen" href="{{ base_url_relative }}/activiteiten/standplaats">Standplaats</a>
          {% endif %}
        </li>
    </ul>
</div>
{% endblock %}

{% block body %}
    <!--  <section id="body"> -->

        {% block content %}{% endblock %}

    <!--  </section> -->
{% endblock %}

{% block bottom %}
    {{ assets.js('bottom') }}
{% endblock %}
</div><!-- /#wrapper -->
</body>
</html>
